<h1>Listing tweets</h1>

<table>
  <thead>
    <tr>
      <th>Tweet text</th>
      <th>Tweet created at</th>
      <th>Tweet guid</th>
      <th>Tweet source</th>
      <th>Twitter user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.tweet_text %></td>
        <td><%= tweet.tweet_created_at %></td>
        <td><%= tweet.tweet_guid %></td>
        <td><%= tweet.tweet_source %></td>
        <td><%= tweet.twitter_user_id %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
